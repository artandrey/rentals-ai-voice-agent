{
  "name": "nest-template",
  "version": "0.0.1",
  "description": "",
  "author": "Andrii Artemenko",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "vitest run",
    "test:dev": "vitest",
    "open-api:generate": "npm run build && node dist/src/main --api-client-and-exit",
    "api-client:generate": "npm run open-api:generate && openapi --useOptions --input ./api.json --output ./.api-client --name ApiClient",
    "test:e2e": "vitest --config ./vitest.config.e2e.mts",
    "db:generate": "drizzle-kit generate --config=./config/drizzle.config.ts",
    "db:push": "drizzle-kit migrate --config=./config/drizzle.config.ts"
  },
  "dependencies": {
    "@nestjs-event-driven/core": "^0.2.0",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^11.0.13",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.13",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/platform-express": "^11.0.13",
    "@nestjs/swagger": "^11.1.1",
    "axios": "^1.8.4",
    "better-sqlite3": "^11.9.1",
    "builder-pattern": "^2.2.0",
    "class-constructor": "^0.2.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "drizzle-orm": "^0.41.0",
    "nest-winston": "^1.10.2",
    "pg": "^8.14.1",
    "postgres": "^3.4.5",
    "qs": "^6.14.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "winston": "^3.17.0",
    "twenty-crm-api-client": "workspace:*"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.6",
    "@nestjs/schematics": "^11.0.3",
    "@nestjs/testing": "^11.0.13",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.1",
    "@types/node": "^22.14.0",
    "@types/pg": "^8.11.11",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "drizzle-kit": "^0.30.6",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.6",
    "openapi-typescript-codegen": "^0.29.0",
    "prettier": "^3.5.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "unplugin-swc": "^1.5.2",
    "vitest": "^3.1.2"
  }
}
